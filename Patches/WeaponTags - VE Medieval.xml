<?xml version="1.0" encoding="utf-8" ?>

<Patch>

    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Vanilla Factions Expanded - Medieval</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>

                <li Class="PatchOperationAdd">
                    <xpath>Defs/ThingDef[defName="VFEM_MeleeWeapon_Claymore"]/weaponTags</xpath>
                    <value>
                        <li>HRK_Conquistadors_Melee</li>
                    </value>
                </li>

                <li Class="PatchOperationAdd">
                    <xpath>Defs/ThingDef[defName="VFEM_MeleeWeapon_HeavyMace"]/weaponTags</xpath>
                    <value>
                        <li>HRK_Conquistadors_Melee</li>
                    </value>
                </li>

                <li Class="PatchOperationAdd">
                    <xpath>Defs/ThingDef[defName="VFEM_Bow_HeavyCrossbow"]/weaponTags</xpath>
                    <value>
                        <li>HRK_Conquistadors_Crossbow</li>
                    </value>
                </li>

            </operations>
        </match>
    </Operation>

</Patch>